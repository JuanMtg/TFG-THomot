\else%

  \setbeamercolor{block title}{use=structure,fg=white,bg=umablue}
  \setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=uared}
  \setbeamercolor{block title example}{use=example text,fg=white,bg=umablue}

  \setbeamercolor{block body}        {fg=umablue,use=block title,bg=umablue10}
  \setbeamercolor{block body alerted}{fg=umablue,use=block title alerted,bg=uared10}
