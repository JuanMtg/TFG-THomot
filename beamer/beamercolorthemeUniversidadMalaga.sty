\ifbeamer@dark%

  \setbeamercolor{structure}{fg=white}%
  \setbeamercolor{normal text}{fg=white}%
  \setbeamercolor{frametitle}{fg=white}%
  \setbeamercolor{frame number in foot}{fg=umablue}%

  \setbeamercolor{frame number in head}{fg=white}%

\else%

  \setbeamercolor{structure}{fg=umablue}%
  \setbeamercolor{normal text}{fg=umablue}%
  \setbeamercolor{frametitle}{fg=umablue}%
  \setbeamercolor{section name}{fg=uared}%
  \setbeamercolor{subsection name}{fg=umablue}%
  \setbeamercolor{frame number in foot}{fg=white}%

  \ifbeamer@darktitle%
      \setbeamercolor{title}{fg=white}%
      \setbeamercolor{subtitle}{fg=white}%
  \else
      \setbeamercolor{subtitle}{fg=uared}%
  \fi

\fi


